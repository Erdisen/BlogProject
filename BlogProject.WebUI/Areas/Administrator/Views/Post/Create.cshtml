@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="offset-3 col-md-6">
    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MessageError"]
        </div>
    }
    else if (TempData["MessageSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MessageSuccess"]
        </div>
    }
    <form asp-controller="Category" asp-action="Create" asp-area="Administrator" method="post">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Yeni Kategori Ekle</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="CategoryName">Kategori Adı</label>
                    <input asp-for="CategoryName" type="text" class="form-control input-square" placeholder="Kategori Adı Giriniz..." />
                </div>
                <div class="form-group">
                    <label for="squareInput">Kategori Açıklaması</label>
                    <input type="text" rows="3" class="form-control input-square" placeholder="Kategori Açıklaması Giriniz..." />
                </div>
            </div>
            <div class="card-action">
                <button class="btn btn-success">Kategori Ekle</button>
            </div>
        </div>
    </form>

   
</div>


