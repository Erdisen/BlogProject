@model Post
@{
    ViewData["Title"] = "Create";
}

<div class="offset-3 col-md-6">
    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MessageError"]
        </div>
    }
    else if (TempData["MessageSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MessageSuccess"]
        </div>
    }
    <form asp-controller="Post" asp-action="Create" asp-area="Administrator" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Yeni Makale Ekle</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title">Makale Başlığı</label>
                    <input asp-for="Title" type="text" class="form-control input-square" placeholder="Makale Adı Giriniz..." />
                </div>
                <div class="form-group">
                    <label asp-for="PostDetail" for="squareInput">Makale Açıklaması</label>
                    <input asp-for="PostDetail" type="text" rows="3" class="form-control input-square" placeholder="Makale Açıklaması Giriniz..." />
                </div>
                <div class="form-group">
                    <label asp-for ="Tags" for="squareInput">Makale Detayı</label>
                    <input asp-for="Tags" type="text" rows="3" class="form-control input-square" placeholder="Etiketleri virgülle ayırarak girebilirsiniz." />
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath" for="squareInput">Makale Görseli</label>
                    <input asp-for="ImagePath" type="file" name="files" class="form-control" placeholder="Makale Açıklaması Giriniz..." />
                </div>
                <div class="form-group">
                    <label asp-for="CategoryID" >Kategori</label>
                    <input asp-for="CategoryID" asp-items="@ViewBag.Categories" class="form-control" />
                    <option >Lütfen Kategori Seçiniz...</option>
                 
                </div>
            </div>
            <div class="card-action">
                <button class="btn btn-success">Makale Ekle</button>
            </div>
        </div>
    </form>

   
</div>


